<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DocInfoActivity">

    <Button
        android:id="@+id/btnSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/spSubject"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55px"
        android:layout_marginRight="35px"
        android:paddingLeft="35px"
        android:paddingRight="35px"
        app:layout_constraintEnd_toEndOf="@+id/spOrganization"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spOrganization" />

    <Spinner
        android:id="@+id/spOrganization"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55px"
        android:layout_marginRight="35px"
        android:paddingLeft="35px"
        android:paddingRight="35px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>